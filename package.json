{
  "name": "CCIP-Serverless",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "deploy": "yarn build && wrangler pages deploy dist",
    "dev": "vite",
    "preview": "yarn build && wrangler pages dev dist",
    "build": "vue-tsc && yarn build:ui && yarn build:worker",
    "build:worker": "esbuild worker/index.ts --bundle --platform=neutral --main-fields=main --outfile=dist/_worker.js",
    "build:ui": "vite build",
    "unit:test": "vitest run",
    "unit:test:ui": "vitest --ui",
    "e2e:test": "cucumber-js"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.x",
    "@cucumber/cucumber": "^10.9.0",
    "@eslint/js": "^9.10.0",
    "@vitejs/plugin-vue": "^5.1.3",
    "@vitest/coverage-v8": "^2.0.5",
    "@vitest/ui": "^2.0.5",
    "esbuild": "^0.23.1",
    "eslint": "^9.10.0",
    "eslint-plugin-vue": "^9.28.0",
    "expect": "^29.7.0",
    "picocolors": "^1.1.0",
    "prettier": "^3.3.3",
    "tsm": "^2.3.0",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.6.0",
    "vite": "^5.4.2",
    "vitest": "^2.0.5",
    "vue-tsc": "^2.1.6",
    "wrangler": "^3.78.2",
    "zod": "^3.22.4"
  },
  "dependencies": {
    "chanfana": "^2.0.4",
    "itty-router": "^5.0.18",
    "reflect-metadata": "^0.2.2",
    "tsyringe": "^4.8.0",
    "vue": "^3.4.38"
  }
}
