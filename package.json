{
  "name": "CCIP-Serverless",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "deploy": "yarn build && wrangler pages deploy dist",
    "dev": "vite",
    "preview": "yarn build && wrangler pages dev dist",
    "build": "vue-tsc && yarn build:ui && yarn build:worker",
    "build:worker": "esbuild worker/index.ts --bundle --platform=neutral --outfile=dist/_worker.js",
    "build:ui": "vite build",
    "unit:test": "vitest run --no-threads",
    "unit:test:ui": "vitest --ui --no-threads",
    "e2e:test": "cucumber-js"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.x",
    "@cucumber/cucumber": "^9.4.0",
    "@vitejs/plugin-vue": "^4.3.4",
    "@vitest/coverage-v8": "^0.34.1",
    "@vitest/ui": "^0.34.1",
    "esbuild": "^0.19.2",
    "expect": "^29.6.2",
    "prettier": "3.0.2",
    "tsm": "^2.3.0",
    "typescript": "^5.1.6",
    "vite": "^4.4.9",
    "vitest": "^0.x",
    "vue-tsc": "^1.8.8",
    "wrangler": "^3.x"
  },
  "dependencies": {
    "itty-router": "^4.0.17",
    "vue": "^3.3.4"
  }
}
