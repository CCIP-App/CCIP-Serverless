{
  "name": "CCIP-Serverless",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "deploy": "yarn build && wrangler pages deploy dist",
    "dev": "vite",
    "preview": "yarn build && wrangler pages dev dist",
    "build": "vue-tsc && yarn build:ui && yarn build:worker",
    "build:worker": "esbuild worker/index.ts --bundle --platform=neutral --main-fields=main --outfile=dist/_worker.js",
    "build:ui": "vite build",
    "unit:test": "vitest run",
    "unit:test:ui": "vitest --ui",
    "e2e:test": "cucumber-js"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.x",
    "@cucumber/cucumber": "^11.2.0",
    "@eslint/js": "^9.24.0",
    "@vitejs/plugin-vue": "^5.2.3",
    "@vitest/coverage-v8": "^2.0.5",
    "@vitest/ui": "^3.1.1",
    "esbuild": "^0.25.2",
    "eslint": "^9.20.1",
    "eslint-plugin-vue": "^9.33.0",
    "expect": "^29.7.0",
    "picocolors": "^1.1.1",
    "prettier": "^3.5.3",
    "tsm": "^2.3.0",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.30.0",
    "vite": "^6.2.6",
    "vitest": "^2.0.5",
    "vue-tsc": "^2.2.8",
    "wrangler": "^4.10.0",
    "zod": "^3.24.2"
  },
  "dependencies": {
    "chanfana": "^2.7.2",
    "itty-router": "^5.0.18",
    "reflect-metadata": "^0.2.2",
    "tsyringe": "^4.9.1",
    "vue": "^3.5.13"
  }
}
